<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_cpu_low"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8.0以下使用proc文件获取cpu信息" />

    <Button
        android:id="@+id/btn_cpu_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8.0以上使用top -n 1获取cpu信息" />

    <Button
        android:id="@+id/btn_cpu_sys"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sys文件方式读取cpu" />

    <Button
        android:id="@+id/btn_all_cpu_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="总cpu时间" />

    <Button
        android:id="@+id/btn_current_pid_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="当前进程时间" />

    <Button
        android:id="@+id/btn_clock_watch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="定时监控" />

    <Button
        android:id="@+id/btn_jump_to_hook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="跳转plt_hook" />

</LinearLayout>